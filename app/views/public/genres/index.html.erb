<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>ジャンル追加・一覧</h1>
        <%= form_with model: @genre, url:genres_path, local:true do |f| %>
          <%= f.label :ジャンル %>
          <%= f.text_field :name, class: "name" %>
          <%= f.submit '追加', class: "btn btn-info active" %>
        <% end %>
        
      <table class="table">
        <thead>
          <tr>
            <th>名前</th>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "削除", genre_path(genre), method: :delete %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>