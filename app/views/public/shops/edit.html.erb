<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= render "layouts/error", resource: @shop %>
      <h1>編集画面</h1>
      <%= form_with model:@shop, url:shop_path(@shop), local: true do |f| %>
      <h4>店名</h4>
      <%= f.text_field :name %>
      <h4>サイトURL</h4>
      <%= f.text_field :url %>
      <h4>紹介文</h4>
      <%= f.text_area :introduction %>
      <h4>画像</h4>
      <%= f.attachment_field :image %>
      <%= f.submit '更新する' %>
      <% end %>
    </div>
  </div>
</div>