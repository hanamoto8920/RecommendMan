<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="shop_form">
                <%= render "layouts/error", resource: @shop %>
                <%= form_with model: @shop, local:true do |f| %>
                    <h4>お店の名前</h4>
                    <%= f.text_field :name %>
                    <h4>お店のURL</h4>
                    <%= f.text_field :url %>
                    <h4>紹介文</h4>
                    <%= f.text_area :introduction %>
                    <h4>ジャンル</h4>
                    <%= f.collection_select :genre_id, Genre.all, :id, :name %>
                    <h4>エリア</h4>
                    <%= f.collection_select :place_id, Place.all, :id, :name %>
                    <h4>画像</h4>
                    <%= f.attachment_field :image %>
                    <%= f.submit '紹介する' %>
                <% end %>
            </div>
        </div>
    </div>
</div>