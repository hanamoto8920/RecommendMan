<div class="shop-new container">
    <div class="row">
        <div class="col-xs-12">
            <!--ポップアップ画面-->
            <div class="popup" id="js-popup">
              <div class="popup-inner">
                <div class="close-btn" id="js-close-btn"><i class="fas fa-times"></i></div>
                <input type="text" id="gurunavitext" value="">
                <button id="testButton" class="btn btn-primary ">紹介したいお店を検索する</button>
                <p>例: 一蘭　心斎橋店</p>
                <div id="js-rest"></div>
              </div>
              <div class="black-background" id="js-black-bg"></div>
            </div>
            <div class="shop_form form-group">
                <%= render "layouts/error", resource: @shop %>
                <%= form_with model: @shop, local:true do |f| %>
                    <h4>お店の名前</h4>
                    <%= f.text_area :name %>
                    <!--お店のURL-->
                    <%= f.hidden_field :url %>
                    <!--お店のURL-->
                    <%= f.hidden_field :opentime %>
                    <!--お店のURL-->
                    <%= f.hidden_field :address %>
                    <!--お店のURL-->
                    <%= f.hidden_field :category %>
                    <h4>紹介文</h4>
                    <%= f.text_area :introduction %>
                    <h4>エリア</h4>
                    <%= f.collection_select :place_id, Place.all, :id, :name %>
                    <h4>画像</h4>
                    <%= f.attachment_field :image %>
                    <br></br>
                    <%= f.submit '紹介する', class:"btn btn-primary btn-lg" %>
                <% end %>
            </div>
        </div>
    </div>
</div>






