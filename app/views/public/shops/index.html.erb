<div class="container">
  <div class="row search-shop">
    <div class="search-area col-xs-12">
      <div class="search-text">エリア検索 <i class="fas fa-map-marker-alt"></i></div>
      <ul class="search-area-list">
        <% @places.each do |place| %>
        <li class="search-area-list-place col-xs-6"><%= link_to place.name, shops_path(place: place.id) %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="shop-list row">
    <% @shops.each do |shop| %>
      <div class="col-lg-3 col-xs-3">
        <%= link_to shop_path(shop), data: {"turbolinks" => false} do %>
          <%= attachment_image_tag shop, :image, :fill, 200, 200, format: 'jpeg', style:"border-radius: 12px;" %>
        <% end %> <br></br>
      </div>
    <% end %>
  </div>
  <div class="shop-new-bottom">
    <%= link_to new_shop_path, data: {"turbolinks" => false} do %>
    <div class="shop-new-bottom-img"></div>
    <% end %>
  </div>
</div>