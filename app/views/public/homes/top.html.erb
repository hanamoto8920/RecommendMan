<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="top-logo col-xs-offset-3" style="margin-top: 20px;"></div>
      <div class="top-logo-text col-xs-offset-3">
        <h1>みんなのオススメを紹介しあうサイト</h1>
      </div>
    </div>

      <h1>エリアで検索する！</h1>
      	<ul>
      	  <% @places.each do |place| %>
          <li><%= link_to place.name, shops_path(place: place.id) %></li>
          <% end %>
      	</ul>
      <h1>ジャンルで検索する！</h1>
      	<ul>
      	  <% @genres.each do |genre| %>
          <li><%= link_to genre.name, shops_path(genre: genre.id) %></li>
          <% end %>
      	</ul>

  </div>
</div>