<div class="container user-show">
  <div class="row">
    <div class="col-xs-12 table-responsive">
      <h1>マイページ</h1><br>
      <h2>メールアドレス</h2>
      <%= @user.email %>

      <h2>いいねリスト</h2>
      <table class="table table-bordered table-hover table-condensed">
        <% @user.likes.each do |like| %>
          <tr class="warning">
            <th>
              <%= link_to shop_path(like.shop) do %>
                <%= attachment_image_tag like.shop, :image, :fill, 100, 100, format: 'jpeg' %>
              <% end %>
            </th>
            <th><%= like.shop.name %></th>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>